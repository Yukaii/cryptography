%h1 資訊安全導論作業一

%h2 Caesar Cipher
= form_tag '/', :id => 'caesar-form' do
  = field_set_tag do 
    = text_field_tag 'plaintext', :value => 'distributed anonymous'
    %select{:name => 'shift'}
      - for i in 0...27
        - if i != 5
          %option{:value => "#{i}"}= "#{i}"
        - else
          %option{:value => "#{i}", :selected => 'selected'}= "#{i}"

  = field_set_tag do
    = submit_tag 'Cipher!', :onclick => 'cipher()'
  .ciphered_text

